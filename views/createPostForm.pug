extends layout 

block content 

	h3= title

	form(action='' method='post')
		.form-group 
			label(for="message") Message: 
			textarea#message.form-control(type="text" name='message' placeholder='Write a nice post here' required='true') 
		button.btn.btn-primary(type='submit') Submit

	hr
	if errors 
		ul 
			each error in errors 
				li=error.msg